<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- I C O N -->
        <!--ImageView
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dp"
            android:layout_gravity="center"/-->

        <!-- R E F E R A L   T I T L E -->
        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Think Pycman is awesome?"
            android:gravity="center"/>


        <!-- R E F E R A L   S U B T E X T -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Share and enjoy it with you friends."
            android:gravity="center"/>

    </LinearLayout>



    <!-- R E F E R A L   O P T I O N S -->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:src="@drawable/fb_share"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:src="@drawable/whatsapp_share"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:layout_alignRight="@+id/whatsapp_share"
            android:src="@drawable/googleplus_share"/>

    </LinearLayout>

</RelativeLayout>